{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"all": true,
				"noParameterAssign": "off",
				"useNumberNamespace": "off"
			},
			"correctness": {
				"all": true,
				"noVoidTypeReturn": "off"
			},
			"security": {
				"all": true
			},
			"performance": {
				"all": true
			},
			"complexity": {
				"all": true,
				"noExcessiveCognitiveComplexity": "off"
			},
			"a11y": {
				"all": true
			},
			"suspicious": {
				"all": true,
				"noConsole": "off",
				"noConsoleLog": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}